.logo {
    height: 100%;
}

.navbar { 
    padding: 0;
    height: 6vh;
    min-height: 30px;
}

.app_name {
    color: mintcream;
    font-weight: bold;
    font-size: 4vh;
}

#btn-login,
#btn-logout{
    height: 100%;
    padding: 0 .375rem;
    display: none;
}

#btn-login.active,
#btn-logout.active{
    display: block !important;
}

.btn-login-label{
    display: block;
}

#icon-logout,
#icon-login{
    font-size: 4vh;
    display: none;
}

@media(max-width: 1500px){
    #icon-logout,
    #icon-login{
        display: block !important;
    }
    
    .btn-login-label,
    .btn-logout-label{
        display: none !important;
    }

    /*.app_name {
        font-size: 3rem;
    }*/
}